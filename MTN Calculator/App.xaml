<Application 
    x:Class="MTN_Unit_Converter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
    <LinearGradientBrush x:Key="gradientOne" EndPoint="0.5,1" StartPoint="0.5,0">
      <GradientStop Color="#FFDE5858" Offset="0" />
      <GradientStop Color="Brown" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="HigherQualityGradient" EndPoint="0.5,1" StartPoint="0.5,0">
      <GradientStop Color="#FFDE5858" Offset="0" />
      <GradientStop Color="Brown" Offset="0.488" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Torquoise" EndPoint="0.5,1" StartPoint="0.5,0">
      <GradientStop Color="DarkTurquoise" Offset="0" />
      <GradientStop Color="#FF006F6F" Offset="0.506" />
    </LinearGradientBrush>
  </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>